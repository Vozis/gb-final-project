enum Role {
  USER
  ADMIN
}

enum NotificationType {
  COMMENT_REPLY
  COMMENT_CREATE
  EVENT_CREATE
  EVENT_UPDATE
  EVENT_COMPLETE
  FRIEND_ADD
}

enum EventStatus {
  OPEN
  CLOSED
  CANCELED
  ACTIVE
}
