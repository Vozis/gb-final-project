      "@project/create-event-main": ["libs/create-event-main/src/index.ts"],
      "@project/home-main": ["libs/home-main/src/index.ts"],
      "@project/notifications-main": ["libs/notifications-main/src/index.ts"],
      "@project/pages": ["libs/pages/src/index.ts"],
      "@project/profile-main": ["libs/profile-main/src/index.ts"],
      "@project/server/src/app/tag": ["libs/server/src/app/tag/src/index.ts"],
      "@project/server/tag": ["libs/server/tag/src/index.ts"],
      "@project/settings-main": ["libs/settings-main/src/index.ts"],
      "@project/shared/config": ["libs/shared/config/src/index.ts"],
      "@project/shared/hooks": ["libs/shared/hooks/src/index.ts"],
      "@project/shared/layout": ["libs/shared/layout/src/index.ts"],
      "@project/shared/providers": ["libs/shared/providers/src/index.ts"],
      "@project/shared/services": ["libs/shared/services/src/index.ts"],
      "@project/shared/store": ["libs/shared/store/src/index.ts"],
      "@project/shared/types": ["libs/shared/types/src/index.ts"],
      "@project/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@project/shared/ui/buttons": ["libs/shared/ui/buttons/src/index.ts"],
      "@project/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@project/single-event-main": ["libs/single-event-main/src/index.ts"],
      "@project/single-user-main": ["libs/single-user-main/src/index.ts"],
      "@project/uploads": ["libs/uploads/src/index.ts"]
